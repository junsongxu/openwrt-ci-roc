##### Target / Device #####
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq60xx=y
CONFIG_TARGET_qualcommax_ipq60xx_DEVICE_jdcloud_re-ss-01=y

##### SoC / Memory / Wi-Fi #####
CONFIG_IPQ_MEM_PROFILE_512=y                 # 512MB memory profile
CONFIG_KERNEL_IPQ_MEM_PROFILE=512
CONFIG_ATH11K_MEM_PROFILE_512M=y             # 512MB Wi-Fi memory profile
CONFIG_PACKAGE_ath11k-firmware-ipq6018=y     # Firmware for IPQ6018 Wi-Fi

##### NSS - 1) Core drivers, ECM, crypto #####
CONFIG_PACKAGE_kmod-qca-nss-drv-bridge-mgr=y
CONFIG_PACKAGE_kmod-qca-nss-drv-pppoe=y
CONFIG_PACKAGE_kmod-qca-nss-drv-qdisc=y
CONFIG_PACKAGE_kmod-qca-nss-drv-vlan-mgr=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
CONFIG_PACKAGE_kmod-qca-nss-crypto=y
CONFIG_PACKAGE_nss-eip-firmware=y
CONFIG_PACKAGE_nss-firmware-default=y
CONFIG_PACKAGE_nss-firmware-ipq6018=y

##### NSS - 2) MCS / IFB #####
CONFIG_PACKAGE_kmod-qca-mcs=y
CONFIG_PACKAGE_kmod-nss-ifb=y

##### NSS - 3) SKB Recycle tuning #####
CONFIG_KERNEL_SKB_FIXED_SIZE_2K=y
CONFIG_KERNEL_SKB_RECYCLER_PREALLOC=y
CONFIG_KERNEL_SKB_RECYCLE_MAX_PREALLOC_SKBS=16384
CONFIG_KERNEL_SKB_RECYCLE_SIZE=1856
CONFIG_SKB_RECYCLE_SIZE_1856=y

##### Firewall - Use nftables + fullcone #####
CONFIG_PACKAGE_kmod-nft-fullcone=y  # nftables fullcone NAT
# disable legacy iptables fullcone
